package co.kh.dev.home.controller;
import java.io.IOException;
import java.io.UnsupportedEncodingException;
import java.util.ArrayList;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import co.kh.dev.common.MyUtility;
import co.kh.dev.home.model.BoardDAO;
import co.kh.dev.home.model.BoardVO;

@WebServlet({ "/boardContentSelectServlet.do" })
public class BoardContentSelectServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
    public BoardContentSelectServlet() {
        super();
    }
    
    private void processRequest(HttpServletRequest request, HttpServletResponse response) {
    	BoardDAO bDAO = BoardDAO.getInstance();
    	BoardVO bvo = new BoardVO();
    	try {
			request.setCharacterEncoding("UTF-8");
		} catch (UnsupportedEncodingException e) {
			e.printStackTrace();
		}
    	bvo.setRownum(Integer.parseInt(request.getParameter("rowNum")));
    	bvo = bDAO.selectByRowNumDB(bvo);
    	request.setAttribute("name",bvo.getName());
    	request.setAttribute("title",bvo.getTitle());
    	request.setAttribute("count",bvo.getCount());
    	request.setAttribute("name",bvo.getName());
    	request.setAttribute("name",bvo.getName());
		
    }
    
	protected void doGet(HttpServletRequest request, HttpServletResponse response){
		processRequest(request, response);
	}



	protected void doPost(HttpServletRequest request, HttpServletResponse response){
		processRequest(request, response);
	}

}
