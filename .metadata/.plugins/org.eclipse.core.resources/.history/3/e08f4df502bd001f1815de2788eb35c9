package co.kh.dev.home.action;

import java.io.IOException;
import java.util.ArrayList;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import co.kh.dev.home.control.ActionForward;
import co.kh.dev.home.model.BoardDAO;
import co.kh.dev.home.model.BoardVO;

public class BoardAlertAction implements Action {

	@Override
	public ActionForward execute(HttpServletRequest request, HttpServletResponse response) throws IOException {
        String status = request.getParameter("status");
        String msg = "";
        boolean alertFlag = false;
        switch (status) {
            case "1":
                msg = "잘못된 접근입니다.";
                alertFlag= true;
                break;
            case "2":
                msg = "글 수정이 완료되었습니다.";
                alertFlag= true;
                break;
            case "3":
                msg = "글삭제가 완료되었습니다.";
                alertFlag= true;
                break;
            default:
                response.sendRedirect("boardPage.jsp");
        }
        request.setAttribute("msg", msg);
        request.setAttribute("alertFlag", alertFlag);
		ActionForward forward = new ActionForward("/home/boardPage.jsp", false);
		return forward;
	}

}
