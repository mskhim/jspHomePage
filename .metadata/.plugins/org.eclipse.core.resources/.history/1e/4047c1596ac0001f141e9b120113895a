package co.kh.dev.home.action.shop;

import java.io.IOException;
import java.util.ArrayList;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import co.kh.dev.home.action.Action;
import co.kh.dev.home.control.ActionForward;
import co.kh.dev.home.model.BoardDAO;
import co.kh.dev.home.model.BoardVO;
import co.kh.dev.home.model.CommentDAO;
import co.kh.dev.home.model.CommentVO;
import co.kh.dev.home.model.ShopDAO;
import co.kh.dev.home.model.ShopVO;

public class ShopListSelectAction implements Action {

	@Override
	public ActionForward execute(HttpServletRequest request, HttpServletResponse response) throws IOException {
    	ShopDAO sDAO = ShopDAO.getInstance();
    	ShopVO svo = new ShopVO();
		request.setCharacterEncoding("UTF-8");
    	svo.setRownum(Integer.parseInt(request.getParameter("rownum")));
    	svo.setType(Integer.parseInt(request.getParameter("type")));
    	svo = sDAO.selectListDB(svo);

    	request.setAttribute("bvo",svo);
		ActionForward forward = new ActionForward("/home/board/boardListPage.jsp", false);
		return forward;
	}

}
