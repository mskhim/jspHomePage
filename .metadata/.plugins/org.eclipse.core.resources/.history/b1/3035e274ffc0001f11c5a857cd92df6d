package co.kh.dev.home.model;

public class CartVO {
    private int no;                // PK
    private String customerId;     // FK
    private int shopNo;            // FK
    private int qt;

    // 기본 생성자
    public CartVO() {}

    // 모든 필드를 초기화하는 생성자
    public CartVO(int no, String customerId, int shopNo, int amount) {
        this.no = no;
        this.customerId = customerId;
        this.shopNo = shopNo;
        this.amount = amount;
    }

    // Getter와 Setter
    public int getNo() {
        return no;
    }

    public void setNo(int no) {
        this.no = no;
    }

    public String getCustomerId() {
        return customerId;
    }

    public void setCustomerId(String customerId) {
        this.customerId = customerId;
    }

    public int getShopNo() {
        return shopNo;
    }

    public void setShopNo(int shopNo) {
        this.shopNo = shopNo;
    }

    public int getAmount() {
        return amount;
    }

    public void setAmount(int amount) {
        this.amount = amount;
    }

    // toString 메서드
    @Override
    public String toString() {
        return "CartVO{" +
                "no=" + no +
                ", customerId='" + customerId + '\'' +
                ", shopNo=" + shopNo +
                ", amount=" + amount +
                '}';
    }
}

