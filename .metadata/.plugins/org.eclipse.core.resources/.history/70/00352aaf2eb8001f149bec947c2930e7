  background-color: rgb(9, 170, 92); /* 초록색 */
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 20px;
}

/* 메인 메뉴 스타일 */
.mainMenu {
  list-style: none;
  display: flex;
  justify-content: center;
  margin: 0;
  padding: 0;
}

.mainMenu > li {
  position: relative; /* 하위 메뉴를 포함하기 위한 위치 설정 */
  padding: 15px 20px;
  cursor: pointer;
}

.mainMenu > li:hover {
  background-color: black; /* 호버 시 배경 검정색 */
  color: white;
}

/* 하위 메뉴 스타일 */
.subMenu {
  list-style: none;
  position: absolute;
  top: 100%; /* 부모 메뉴 아래로 배치 */
  left: 0;
  width: 100%; /* 너비를 100%로 설정 */
  background-color: white; /* 하위 메뉴 배경 흰색 */
  display: none; /* 기본적으로 숨김 */
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

.subMenu li {
  padding: 10px 20px;
  color: black; /* 기본 텍스트 색상 */
  border-bottom: 1px solid #eaeaea; /* 구분선 */
}

.subMenu li:last-child {
  border-bottom: none; /* 마지막 항목 구분선 제거 */
}

.subMenu li a {
  text-decoration: none;
  color: black;
}

.subMenu li:hover {
  background-color: rgb(9, 170, 92); /* 초록색 배경 */
  color: white;
}

.mainMenu > li:hover .subMenu {
  display: block; /* 부모 메뉴에 호버 시 하위 메뉴 표시 */
}
