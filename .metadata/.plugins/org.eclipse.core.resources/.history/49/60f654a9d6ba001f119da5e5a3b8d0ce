document.querySelectorAll(".commentReplyBtn").forEach((btn) => {
     btn.addEventListener("click", () => {
         const parentId = btn.getAttribute("data-comment-id");

         // 기존 폼 제거
         document.querySelectorAll(".replyForm").forEach((form) => form.remove());

         // 대댓글 입력 폼 생성
         const replyForm = document.createElement("form");
         replyForm.className = "replyForm";
         replyForm.method = "post";
         replyForm.action = "/BoardCommentServlet.do";
         replyForm.innerHTML = `
             <input type="hidden" name="postId" value="${postId}" />
             <input type="hidden" name="parentId" value="${parentId}" />
             <textarea name="commentContent" placeholder="답글을 입력하세요" required></textarea>
             <button type="submit">작성</button>
         `;

         // 현재 댓글 아래에 대댓글 입력 폼 추가
         btn.closest(".comment").appendChild(replyForm);
     });
 });
 
 function deletePost(no) {
     if (confirm("게시글을 삭제하시겠습니까?")) {
         // 확인을 눌렀을 때 실행
         window.location.href = "/deletePostServlet.do?no="+no;
     } else {
         // 취소를 눌렀을 때 실행
         alert("삭제가 취소되었습니다.");
     }
 }